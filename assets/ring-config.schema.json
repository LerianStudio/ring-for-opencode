{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/fredcamaral/ring-for-opencode/main/assets/ring-config.schema.json",
  "title": "Ring Configuration",
  "description": "Configuration schema for Ring",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "disabled_hooks": {
      "default": [],
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "session-start",
          "context-injection",
          "notification",
          "task-completion",
          "session-outcome",
          "outcome-inference",
          "doubt-resolver",
          "background-notification",
          "compaction-context",
          "rules-injector",
          "agent-reminder"
        ]
      }
    },
    "disabled_agents": {
      "default": [],
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "code-reviewer",
          "security-reviewer",
          "business-logic-reviewer",
          "test-reviewer",
          "nil-safety-reviewer",
          "codebase-explorer",
          "write-plan",
          "coder",
          "docs",
          "explorer",
          "architect",
          "vision",
          "backend-engineer-golang",
          "backend-engineer-typescript",
          "frontend-engineer",
          "frontend-designer",
          "devops-engineer",
          "sre",
          "qa-analyst"
        ]
      }
    },
    "disabled_skills": {
      "default": [],
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "using-ring",
          "test-driven-development",
          "systematic-debugging",
          "requesting-code-review",
          "writing-plans",
          "executing-plans",
          "dispatching-parallel-agents",
          "verification-before-completion",
          "commit",
          "brainstorm",
          "codereview",
          "lint",
          "worktree"
        ]
      }
    },
    "disabled_commands": {
      "default": [],
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "brainstorm",
          "codereview",
          "commit",
          "compound-learnings",
          "create-handoff",
          "dev-cancel",
          "dev-cycle",
          "dev-refactor",
          "dev-report",
          "dev-status",
          "execute-plan",
          "explore-codebase",
          "interview-me",
          "lint",
          "query-artifacts",
          "release-guide",
          "resume-handoff",
          "worktree",
          "write-plan"
        ]
      }
    },
    "background_tasks": {
      "default": {
        "defaultConcurrency": 3,
        "taskTimeoutMs": 1800000
      },
      "type": "object",
      "properties": {
        "defaultConcurrency": {
          "default": 3,
          "type": "number",
          "minimum": 1,
          "maximum": 10
        },
        "agentConcurrency": {
          "type": "object",
          "propertyNames": {
            "type": "string"
          },
          "additionalProperties": {
            "type": "number",
            "minimum": 1,
            "maximum": 10
          }
        },
        "taskTimeoutMs": {
          "default": 1800000,
          "type": "number",
          "minimum": 60000,
          "maximum": 3600000
        }
      }
    },
    "notifications": {
      "default": {
        "enabled": true,
        "onIdle": true,
        "onError": true,
        "onBackgroundComplete": true
      },
      "type": "object",
      "properties": {
        "enabled": {
          "default": true,
          "type": "boolean"
        },
        "onIdle": {
          "default": true,
          "type": "boolean"
        },
        "onError": {
          "default": true,
          "type": "boolean"
        },
        "onBackgroundComplete": {
          "default": true,
          "type": "boolean"
        }
      }
    },
    "experimental": {
      "default": {
        "preemptiveCompaction": false,
        "compactionThreshold": 0.8,
        "aggressiveTruncation": false
      },
      "type": "object",
      "properties": {
        "preemptiveCompaction": {
          "default": false,
          "type": "boolean"
        },
        "compactionThreshold": {
          "default": 0.8,
          "type": "number",
          "minimum": 0.5,
          "maximum": 0.95
        },
        "aggressiveTruncation": {
          "default": false,
          "type": "boolean"
        }
      }
    },
    "orchestrator": {
      "type": "object",
      "properties": {
        "$schema": {
          "type": "string"
        },
        "basePort": {
          "default": 14096,
          "type": "number"
        },
        "autoSpawn": {
          "default": true,
          "type": "boolean"
        },
        "startupTimeout": {
          "default": 30000,
          "type": "number"
        },
        "ui": {
          "default": {
            "toasts": true,
            "injectSystemContext": true,
            "systemContextMaxWorkers": 12,
            "defaultListFormat": "markdown",
            "debug": false
          },
          "type": "object",
          "properties": {
            "toasts": {
              "default": true,
              "type": "boolean"
            },
            "injectSystemContext": {
              "default": true,
              "type": "boolean"
            },
            "systemContextMaxWorkers": {
              "default": 12,
              "type": "number"
            },
            "defaultListFormat": {
              "default": "markdown",
              "type": "string",
              "enum": [
                "markdown",
                "json"
              ]
            },
            "debug": {
              "default": false,
              "type": "boolean"
            }
          }
        },
        "profiles": {
          "default": [],
          "type": "array",
          "items": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "kind": {
                    "type": "string",
                    "enum": [
                      "server",
                      "agent",
                      "subagent"
                    ]
                  },
                  "model": {
                    "type": "string"
                  },
                  "purpose": {
                    "type": "string"
                  },
                  "whenToUse": {
                    "type": "string"
                  },
                  "systemPrompt": {
                    "type": "string"
                  },
                  "supportsVision": {
                    "type": "boolean"
                  },
                  "supportsWeb": {
                    "type": "boolean"
                  },
                  "tools": {
                    "type": "object",
                    "propertyNames": {
                      "type": "string"
                    },
                    "additionalProperties": {
                      "type": "boolean"
                    }
                  },
                  "temperature": {
                    "type": "number"
                  },
                  "tags": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                },
                "required": [
                  "id",
                  "name",
                  "model",
                  "purpose",
                  "whenToUse"
                ]
              }
            ]
          }
        },
        "workers": {
          "default": [],
          "type": "array",
          "items": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "kind": {
                    "type": "string",
                    "enum": [
                      "server",
                      "agent",
                      "subagent"
                    ]
                  },
                  "model": {
                    "type": "string"
                  },
                  "purpose": {
                    "type": "string"
                  },
                  "whenToUse": {
                    "type": "string"
                  },
                  "systemPrompt": {
                    "type": "string"
                  },
                  "supportsVision": {
                    "type": "boolean"
                  },
                  "supportsWeb": {
                    "type": "boolean"
                  },
                  "tools": {
                    "type": "object",
                    "propertyNames": {
                      "type": "string"
                    },
                    "additionalProperties": {
                      "type": "boolean"
                    }
                  },
                  "temperature": {
                    "type": "number"
                  },
                  "tags": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                },
                "required": [
                  "id",
                  "name",
                  "model",
                  "purpose",
                  "whenToUse"
                ]
              }
            ]
          }
        },
        "workflows": {
          "default": {
            "enabled": true,
            "limits": {
              "maxSteps": 4,
              "maxTaskChars": 12000,
              "maxCarryChars": 24000,
              "perStepTimeoutMs": 120000
            }
          },
          "type": "object",
          "properties": {
            "enabled": {
              "default": true,
              "type": "boolean"
            },
            "limits": {
              "default": {
                "maxSteps": 4,
                "maxTaskChars": 12000,
                "maxCarryChars": 24000,
                "perStepTimeoutMs": 120000
              },
              "type": "object",
              "properties": {
                "maxSteps": {
                  "default": 4,
                  "type": "number"
                },
                "maxTaskChars": {
                  "default": 12000,
                  "type": "number"
                },
                "maxCarryChars": {
                  "default": 24000,
                  "type": "number"
                },
                "perStepTimeoutMs": {
                  "default": 120000,
                  "type": "number"
                }
              }
            }
          }
        },
        "security": {
          "default": {
            "preventRecursiveSpawn": true,
            "recursiveSpawnEnvVar": "RING_ORCHESTRATOR_WORKER"
          },
          "type": "object",
          "properties": {
            "preventRecursiveSpawn": {
              "default": true,
              "type": "boolean"
            },
            "recursiveSpawnEnvVar": {
              "default": "RING_ORCHESTRATOR_WORKER",
              "type": "string"
            }
          }
        }
      },
      "additionalProperties": {}
    },
    "hooks": {
      "type": "object",
      "propertyNames": {
        "type": "string"
      },
      "additionalProperties": {
        "type": "object",
        "propertyNames": {
          "type": "string"
        },
        "additionalProperties": {}
      }
    }
  }
}