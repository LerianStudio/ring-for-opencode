{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Ring Configuration",
  "description": "Configuration schema for Ring OpenCode plugin",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "disabled_hooks": {
      "type": "array",
      "description": "Hooks to disable",
      "items": {
        "type": "string",
        "enum": [
          "session-start",
          "context-injection",
          "notification",
          "task-completion",
          "session-outcome",
          "outcome-inference",
          "doubt-resolver",
          "background-notification",
          "compaction-context",
          "rules-injector",
          "agent-reminder"
        ]
      }
    },
    "disabled_agents": {
      "type": "array",
      "description": "Agents to disable",
      "items": {
        "type": "string",
        "enum": [
          "code-reviewer",
          "security-reviewer",
          "business-logic-reviewer",
          "test-reviewer",
          "nil-safety-reviewer",
          "codebase-explorer",
          "write-plan",
          "backend-engineer-golang",
          "backend-engineer-typescript",
          "frontend-engineer",
          "frontend-designer",
          "devops-engineer",
          "sre",
          "qa-analyst"
        ]
      }
    },
    "disabled_skills": {
      "type": "array",
      "description": "Skills to disable",
      "items": {
        "type": "string",
        "enum": [
          "using-ring",
          "test-driven-development",
          "systematic-debugging",
          "requesting-code-review",
          "writing-plans",
          "executing-plans",
          "dispatching-parallel-agents",
          "verification-before-completion",
          "commit",
          "brainstorm",
          "codereview",
          "lint",
          "worktree"
        ]
      }
    },
    "disabled_commands": {
      "type": "array",
      "description": "Commands to disable",
      "items": {
        "type": "string",
        "enum": [
          "commit",
          "codereview",
          "brainstorm",
          "execute-plan",
          "worktree",
          "lint",
          "create-handoff",
          "resume-handoff",
          "explore-codebase",
          "interview-me",
          "write-plan"
        ]
      }
    },
    "background_tasks": {
      "type": "object",
      "description": "Background task configuration",
      "properties": {
        "defaultConcurrency": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10,
          "default": 3,
          "description": "Default concurrency limit for background tasks"
        },
        "taskTimeoutMs": {
          "type": "integer",
          "minimum": 60000,
          "maximum": 3600000,
          "default": 1800000,
          "description": "Task timeout in milliseconds (default: 30 minutes)"
        },
        "agentConcurrency": {
          "type": "object",
          "description": "Per-agent concurrency limits",
          "additionalProperties": {
            "type": "integer",
            "minimum": 1,
            "maximum": 10
          }
        }
      }
    },
    "notifications": {
      "type": "object",
      "description": "Notification configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable desktop notifications"
        },
        "onIdle": {
          "type": "boolean",
          "default": true,
          "description": "Notify when session becomes idle"
        },
        "onError": {
          "type": "boolean",
          "default": true,
          "description": "Notify on session errors"
        },
        "onBackgroundComplete": {
          "type": "boolean",
          "default": true,
          "description": "Notify when background tasks complete"
        }
      }
    },
    "experimental": {
      "type": "object",
      "description": "Experimental features",
      "properties": {
        "preemptiveCompaction": {
          "type": "boolean",
          "default": false,
          "description": "Enable preemptive context compaction"
        },
        "compactionThreshold": {
          "type": "number",
          "minimum": 0.5,
          "maximum": 0.95,
          "default": 0.80,
          "description": "Context usage threshold to trigger compaction (0.5-0.95)"
        },
        "aggressiveTruncation": {
          "type": "boolean",
          "default": false,
          "description": "Enable aggressive tool output truncation"
        }
      }
    },
    "hooks": {
      "type": "object",
      "description": "Per-hook configuration overrides",
      "additionalProperties": {
        "type": "object",
        "description": "Hook-specific configuration"
      }
    }
  }
}
